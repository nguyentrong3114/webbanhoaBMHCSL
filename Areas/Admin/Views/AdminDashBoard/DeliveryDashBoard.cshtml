                    <div class="data-static">
                        <p>1.000</p>
                        <div class="compare-static">
                            <div class="persent profit">
                                <i class="fa-solid fa-arrow-trend-up"></i>
                                <p>15%</p>
                            </div>
                            <p>vs last 7 days</p>
                        </div>
                    </div>
                </div>
                <div class="static">
                    <div class="title-static">
                        <i class="fa-solid fa-truck"></i>
                        <h3>Being Delivered</h3>
                    </div>
                    <div class="data-static">
                        <p>4.000</p>
                        <div class="compare-static">
                            <div class="persent profit">
                                <i class="fa-solid fa-arrow-trend-up"></i>
                                <p>15%</p>
                            </div>
                            <p>vs last 7 days</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="action">
                <button>Làm Mới</button>
                <button>Hủy Giao</button>
            </div>
            <div class="table-user">
                <table border="1">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Mã Giao Hàng</th>
                            <th>Họ Tên Khách Hang</th>
