                    <div class="title-static">
                        <i class="fa-solid fa-globe"></i>
                        <h3>Total Order</h3>
                    </div>
                    <div class="data-static">
                        <p>5.000</p>
                        <div class="compare-static">
                            <div class="persent profit">
                                <i class="fa-solid fa-arrow-trend-up"></i>
                                <p>15%</p>
                            </div>
                            <p>vs last 7 days</p>
                        </div>
                    </div>
                </div>
                <div class="static">
                    <div class="title-static">
                        <i class="fa-solid fa-money-bill"></i>
                        <h3>Total Money</h3>
                    </div>
                    <div class="data-static">
                        <p>$70.000</p>
                        <div class="compare-static">
                            <div class="persent profit">
                                <i class="fa-solid fa-arrow-trend-up"></i>
                                <p>15%</p>
                            </div>
